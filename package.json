{
  "name": "docsify-plugin-manifest",
  "version": "1.0.0",
  "description": "docsify search with pre-built index",
  "main": "dist/manifest.js",
  "files": [
    "dist"
  ],
  "bin": "dist/cli.js",
  "types": "dist/index.d.ts",
  "repository": "github.com/leviwheatcroft/docsify-plugin-manifest",
  "author": "Levi Wheatcroft <levi@wht.cr>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "copyTypes": "copyfiles -u 2 src/types/*.d.ts dist/",
    "buildCli": "webpack --config webpack.cli.js && DEBUG=manifest* node dist/cli.js -r dev -f \"**/*.md\" --pretty",
    "buildPlugin": "webpack --config webpack.plugin.js && cp dist/manifest.js dev/",
    "browsersync": "node browsersync",
    "dev": "yarn run clean && yarn run copyTypes && concurrently --raw \"yarn run npm-watch\" \"yarn run browsersync\" "
  },
  "watch": {
    "buildCli": {
      "patterns": [
        "src/cli/**/*.*"
      ],
      "inherit": true
    },
    "buildPlugin": {
      "patterns": [
        "src/plugin/**/*.*"
      ],
      "inherit": true
    }
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/hjson": "^2.4.1",
    "@types/json5": "^0.0.30",
    "@types/minimatch": "^3.0.3",
    "@types/yaml": "^1.2.0",
    "debug": "^4.1.1",
    "globby": "^11.0.0",
    "gray-matter": "^4.0.2",
    "hjson": "^3.2.1",
    "json5": "^2.1.1",
    "marked": "^0.8.0",
    "multimatch": "^4.0.0",
    "nconf": "^0.10.0",
    "title-case": "^3.0.2",
    "ts-node": "8.0.2",
    "typescript-transform-paths": "^1.1.14",
    "webpack-node-externals": "^1.7.2",
    "yaml": "^1.8.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/marked": "^0.7.3",
    "@types/node": "^13.9.0",
    "bootstrap-icons": "^1.0.0-alpha2",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "css-loader": "^3.4.2",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.21",
    "minisearch": "^2.1.4",
    "npm-watch": "^0.6.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "ttypescript": "1.5.9",
    "typescript": "3.7.4",
    "typescript-is": "^0.14.3",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "webpack": "^4.42.0",
    "webpack-bundle-size-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.11"
  }
}
